{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base", "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "import/typescript" 
  ],
  "rules": {
    "prettier/prettier": "error",
    "quotes": "off",
    "@typescript-eslint/quotes": ["error"],
    "no-console":"off",
    "import/prefer-default-export": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
